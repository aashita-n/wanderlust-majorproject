<% layout ("/layouts/boilerplate") -%>

<div class="row mt-3">
  <h1 class="col-6 offset-3 mt-3">Sign Up on Wanderlust</h1>
  <br />
  <br />
  <br />
  <br />
  <br />
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label"> Create a username: </label>
        <input
          name="username"
          id="username"
          placeholder="Enter username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <br />
      <div class="mb-3">
        <label for="email" class="form-label"> Enter you email id: </label>
        <input
          name="email"
          id="email"
          placeholder="Enter email"
          type="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <br />
      <div class="mb-3">
        <label for="password" class="form-label"> Create a new password:</label>
        <input
          name="password"
          id="password"
          placeholder="Enter password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <br />

      <div class="text-center mb-3">
        <button class="btn btn-danger">Sign Up</button>
      </div>
    </form>
  </div>
</div>
